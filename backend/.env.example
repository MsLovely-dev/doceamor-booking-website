DJANGO_ENV=development
DJANGO_DEBUG=true
DJANGO_SECRET_KEY=change-this-secret-key
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:5173
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080
BUSINESS_TIME_ZONE=Asia/Manila
BOOKING_PAYMENT_TIMEOUT_MINUTES=5
BOOKING_STATUS_EMAIL_ENABLED=true

# Default dev email backend prints email to console.
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=Doce Amor <no-reply@doceamor.local>

# SMTP example (replace EMAIL_BACKEND when using SMTP)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=true
# EMAIL_USE_SSL=false

